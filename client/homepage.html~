	<button id="{{name}}" class="btn btn-info" type="button" onclick="showDocs('{{name}}')">Me</button>&nbsp;&nbsp; 	
	{{#family}}
	<button id="{{fam}}" class="btn btn-info" type="button" onclick="showDocs('{{fam}}')">{{fam}}</button>&nbsp;&nbsp; 	
